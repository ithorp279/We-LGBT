{
	"name": "We LGBT",
	"version": "0.1",
	"icons": { 
		"16": "/img/icons/icon_16.png",
		"48": "/img/icons/icon_48.png",
		"128": "/img/icons/icon_128.png" 
	},

	"description": "I should fill this in with something accurate",
	"permissions": [
		"declarativeContent",
		"storage"
	],

	"background": {
		"scripts": ["js/background.js"],
		"persistent": false
	},

	"page_action": {
		"default_icon": {
			"19": "img/icons/icon_19.png",
			"38": "img/icons/icon_38.png"
		},
		"default_title": "We LGBT",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"js": [
					"/js/external/jquery.js",
					"/js/content_script.js"
				]
		}
	],

	"manifest_version": 2
}